{
    "compilerOptions": {
        "module": "ES2020",
        "moduleResolution": "node",
        "target": "ES2021",
        "lib": [
            "ES2021"
        ],
        "declaration": true,
        "outDir": "./lib",
        "rootDir": "./src",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}