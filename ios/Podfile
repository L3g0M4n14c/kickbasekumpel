# Uncomment this line to define a global platform for your project
platform :ios, '15.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static

  # Pre-compiled FirebaseFirestore XCFrameworks – vermeidet das Kompilieren von
  # gRPC-C++ und BoringSSL aus dem Quellcode (~35-40 Min. CI-Zeit gespart).
  # Tag muss mit der Firebase SDK Version in firebase_core übereinstimmen.
  # Aktuelle Version prüfen: flutter pub deps | grep firebase_core
  pod 'FirebaseFirestore', :git => 'https://github.com/invertase/firestore-ios-sdk-frameworks.git', :tag => '12.8.0'

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    # Fix: Enforce minimum iOS deployment target for all Pods (Xcode 16 requires >= 12.0)
    target.build_configurations.each do |config|
      deployment_target = config.build_settings['IPHONEOS_DEPLOYMENT_TARGET']
      if deployment_target && deployment_target.to_f < 15.0
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      end
    end
    
    # Fix: Disable BUILD_LIBRARY_FOR_DISTRIBUTION to avoid XCFrameworkIntermediates
    # search path warnings that cause linker failures with Firebase on arm64 CI runners
    target.build_configurations.each do |config|
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'NO'
    end
    
    # Xcode 16 Workaround: Fix Firebase Firestore stale file warnings
    # https://github.com/firebase/firebase-ios-sdk/issues/13487
    if target.name == 'FirebaseFirestore' || target.name == 'FirebaseFirestoreInternal' || target.name == 'cloud_firestore'
      target.build_configurations.each do |config|
        config.build_settings['CONFIGURATION_BUILD_DIR'] = '$(BUILD_DIR)/$(CONFIGURATION)$(EFFECTIVE_PLATFORM_NAME)'
        config.build_settings['STRIP_INSTALLED_PRODUCT'] = 'NO'
        config.build_settings['DEFINES_MODULE'] = 'YES'
      end
    end
    
    # Build Performance: Optimize compiler flags for Debug builds
    target.build_configurations.each do |config|
      if config.name == 'Debug'
        config.build_settings['SWIFT_OPTIMIZATION_LEVEL'] = '-Onone'
        config.build_settings['GCC_OPTIMIZATION_LEVEL'] = '0'
      end
      
      # Fix duplicate library linking warning: Remove duplicate -lc++ flags
      # This resolves: "ld: warning: ignoring duplicate libraries: '-lc++'"
      # Firebase and other C++ pods can add multiple -lc++ flags, causing linker warnings
      other_ldflags = config.build_settings['OTHER_LDFLAGS'] || ''
      if other_ldflags.kind_of?(String)
        other_ldflags = other_ldflags.split(' ')
      else
        other_ldflags = other_ldflags.dup
      end
      
      # Remove all instances of -lc++ and re-add only one
      other_ldflags.delete('-lc++')
      other_ldflags << '-lc++' unless other_ldflags.include?('-lc++')
      
      # Remove duplicate -lSystem flags as well (can happen with Firebase)
      other_ldflags.uniq!
      
      config.build_settings['OTHER_LDFLAGS'] = other_ldflags.join(' ')
    end
  end
  
  # Build Performance: Parallelize Pod builds
  ENV['CONCURRENT_PREGEN'] = 'true'
  ENV['COCOAPODS_PARALLEL_POD_INSTALL'] = 'true'
end
